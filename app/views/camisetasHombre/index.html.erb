        <td><%= camisetahombre.source %></td>
        <td class="imagencarrito"><img src=<%=camisetahombre.source%>></td>
        <td><%= link_to 'Ver', camisetahombre %></td>
        <td><%= link_to 'Editar', edit_camisetahombre_path(camisetashombre) %></td>
        <td><%= link_to 'Eliminar', camisetahombre, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
